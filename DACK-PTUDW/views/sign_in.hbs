<link rel="stylesheet" type="text/css" href="/css/sign_in.css">

<a href="/index"><img src="/css/images/buhnrop.png" alt=""></a>

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Sign In</h3>
				<div class="d-flex justify-content-end social_icon">
					<span><i class="fab fa-facebook-square"></i></span>
					<span><i class="fab fa-google-plus-square"></i></span>
					<span><i class="fab fa-twitter-square"></i></span>
				</div>
			</div>
			<div class="card-body">
				<form>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="username">
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="password">
					</div>
					<div class="row align-items-center remember">
						<input type="checkbox">Remember Me
					</div>
					<div class="form-group" style="display:flex; align-items: stretch;">
						<a href="/index"><input type="submit" value="Bidder Login" class="btn float-right login_btn" style="white-space: normal;"></a>
						<a href="/index"><input type="submit" value="Seller Login" class="btn float-right login_btn" style="white-space: normal;" ></a>
						<a href="/index"><input type="submit" value="Admin Login" class="btn float-right login_btn" style="white-space: normal;"></a>
					</div>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Don't have an account?<a href="/sign_up">Sign Up</a>
				</div>
				<div class="d-flex justify-content-center">
					<a href="#" style="color: #F49DBA;">Forgot your password?</a>
				</div>
			</div>
		</div>
	</div>
</div>